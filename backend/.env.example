# Secret key for JWT signing. Generate via `openssl rand -hex 32`
SECRET_KEY=replace_me_with_random_hex

# Outgoing email settings
FROM_EMAIL=your@email

SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASSWORD=your-smtp-password
SMTP_FROM_NAME=Projects-Platform

# Flags accept true/false/1/0/yes/no/on/off
SMTP_USE_TLS=true
SMTP_USE_SSL=false
SMTP_VALIDATE_CERTS=true
SMTP_SUPPRESS_SEND=false

# Timeout in seconds for SMTP connections
SMTP_TIMEOUT=30